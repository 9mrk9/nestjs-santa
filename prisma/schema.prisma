generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Toy {
  id       Int      @id @default(autoincrement())
  name     String
  material Material
  weight   Float
  children Child[] @relation("ChildToys")
}

model Child {
  id        Int    @id @default(autoincrement())
  name      String
  address   String
  isNice    Boolean
  toys      Toy[]  @relation("ChildToys")
}

enum Material {
  wood
  metal
  plastic
  other
}
